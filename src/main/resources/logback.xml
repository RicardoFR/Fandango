<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %green([%.-4thread]) %highlight(%-5level) %cyan(%-19logger{0}) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="io.micronaut.http" level="TRACE"/>
  <logger name="io.netty.handler.logging" level="TRACE" />
  <logger name="io.micronaut.jackson.parser" level="TRACE"/>
  <logger name="com.mongodb" level="NONE"/>

</configuration>