<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Stop output INFO at start -->
  <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %green([%.-4thread]) %highlight(%-5level) %cyan(%-19logger{0}) - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="io.micronaut.http" level="ERROR"/>
  <logger name="io.netty.handler.logging" level="ERROR"/>
  <logger name="io.micronaut.jackson.parser" level="ERROR"/>
  <logger name="java.net.SocketException" level="NONE"/>

</configuration>